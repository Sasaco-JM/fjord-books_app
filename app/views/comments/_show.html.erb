<h2><%= Comment.model_name.human %></h2>

<tbody>
  <% comments.each do |comment| %>
    <table>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.name_or_email %></td>
        <td><%= l comment.created_at %></td>
        <td><%= link_to t('views.common.destroy'), [commentable,comment], method: :delete, data: { confirm: t('views.common.delete_confirm') } if comment.user_id == current_user.id%></td>
      </tr>
  <% end %>
  </table>
</tbody>

<br>

<%= render 'comments/comment_form', commentable: @commentable %>
