<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <p>
      <% if user_signed_in? %>
      <%= t('views.common.login_user') %> <strong><%= current_user.email %></strong>.
       <%= link_to t('views.common.books'), '/books' %> |
        <%= link_to t('views.common.users'), '/users' %> |
        <%= link_to t('views.common.edit_profile'), edit_user_registration_path %> |
        <%= link_to t('views.common.logout'), destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to t('views.common.sign_up'), new_user_registration_path %> |
        <%= link_to t('views.common.login'), new_user_session_path %>
      <% end %>
    </p>
    <%= yield %>
  </body>
</html>
